  <div class="matrix-bg" id="matrix"></div>

  <div class="chat-container">
    <div class="chat-header">
      <div class="status-dot"></div>
      <h2>Neon Contact</h2>
    </div>

    <div class="messages" id="messages">
      <!-- messages appear here -->
    </div>

    <div class="input-area">
      <input type="file" id="file-input" accept="image/*,audio/*,.pdf,.zip,.rar,.docx,.txt" hidden />
      <button class="btn" onclick="document.getElementById('file-input').click()">üìé</button>
      
      <textarea id="message-input" rows="1" placeholder="Type a message..."></textarea>
      
      <button class="btn" id="send-btn">Send</button>
    </div>
  </div>

  <script>
    // Matrix background (same feeling as your library)
    const matrix = document.getElementById('matrix');
    const chars = '„Ç¢„Ç¢„Ç§„Ç¶„Ç®„Ç™„Ç´„Ç≠„ÇØ„Ç±„Ç≥„Çµ„Ç∑„Çπ„Çª„ÇΩ„Çø„ÉÅ„ÉÑ„ÉÜ„Éà„Éä„Éã„Éå„Éç„Éé„Éè„Éí„Éï„Éò„Éõ„Éû„Éü„É†„É°„É¢„É§„É¶„É®„É©„É™„É´„É¨„É≠„ÉØ„É≤„É≥„Ç¨„ÇÆ„Ç∞„Ç≤„Ç¥„Ç∂„Ç∏„Ç∫„Çº„Çæ„ÉÄ„ÉÇ„ÉÖ„Éá„Éâ„Éê„Éì„Éñ„Éô„Éú„Éë„Éî„Éó„Éö„Éù0123456789$+-*/=%#&@';
    for (let i = 0; i < 1800; i++) {
      const span = document.createElement('span');
      span.textContent = chars[Math.floor(Math.random() * chars.length)];
      matrix.appendChild(span);
    }

    // Chat logic
    const messagesDiv = document.getElementById('messages');
    const input = document.getElementById('message-input');
    const sendBtn = document.getElementById('send-btn');
    const fileInput = document.getElementById('file-input');

    let messages = JSON.parse(localStorage.getItem('neonChatMessages')) || [];

    function saveMessages() {
      localStorage.setItem('neonChatMessages', JSON.stringify(messages));
    }

    function formatTime() {
      const now = new Date();
      return now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
    }

    function addMessage(text = '', isYou = true, type = 'text', fileUrl = '', fileName = '') {
      const msg = { text, isYou, type, fileUrl, fileName, time: formatTime() };
      messages.push(msg);
      saveMessages();
      renderMessage(msg);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function renderMessage(msg) {
      const div = document.createElement('div');
      div.className = `message ${msg.isYou ? 'you' : 'other'}`;

      if (msg.type === 'text') {
        div.innerHTML = msg.text.replace(/\n/g, '<br>');
      } else if (msg.type === 'image') {
        const img = document.createElement('img');
        img.src = msg.fileUrl;
        img.alt = "Shared image";
        div.appendChild(img);
      } else if (msg.type === 'audio') {
        const audio = document.createElement('audio');
        audio.controls = true;
        audio.src = msg.fileUrl;
        div.innerHTML = `<strong>Voice message</strong><br>`;
        div.appendChild(audio);
      } else if (msg.type === 'file') {
        const a = document.createElement('a');
        a.href = msg.fileUrl;
        a.download = msg.fileName;
        a.className = 'file-link';
        a.innerHTML = `üìÑ ${msg.fileName}`;
        div.innerHTML = `<strong>File shared</strong><br>`;
        div.appendChild(a);
      }

      const time = document.createElement('span');
      time.className = 'time';
      time.textContent = msg.time;
      div.appendChild(time);

      messagesDiv.appendChild(div);
    }

    // Load saved messages
    messages.forEach(renderMessage);
    messagesDiv.scrollTop = messagesDiv.scrollHeight;

    // Send text message
    function sendText() {
      const text = input.value.trim();
      if (!text) return;

      addMessage(text, true, 'text');
      input.value = '';

      // Fake reply after a delay
      setTimeout(() => {
        const replies = [
          "Got it üî•",
          "Nice one",
          "Wait... really? üò≥",
          "Sending that right now",
          "brb checking",
          "lol that's wild",
          "on my way",
          "üî•üî•üî•"
        ];
        addMessage(replies[Math.floor(Math.random() * replies.length)], false, 'text');
      }, 800 + Math.random() * 1200);
    }

    sendBtn.onclick = sendText;

    input.addEventListener('keydown', e => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendText();
      }
    });

    // Auto-resize textarea
    input.addEventListener('input', () => {
      input.style.height = 'auto';
      input.style.height = (input.scrollHeight) + 'px';
    });

    // File / image / voice handling
    fileInput.onchange = e => {
      const file = e.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = ev => {
        const url = ev.target.result;

        if (file.type.startsWith('image/')) {
          addMessage('', true, 'image', url);
        } else if (file.type.startsWith('audio/')) {
          addMessage('', true, 'audio', url);
        } else {
          addMessage('', true, 'file', url, file.name);
        }
      };
      reader.readAsDataURL(file);
    };

  </script>
</body>
